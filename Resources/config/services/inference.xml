<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
		<parameter key="rezzza.ruler.inference_container.class">Rezzza\RulerBundle\Ruler\Inference\Container</parameter>
		<parameter key="rezzza.ruler.inference_factory.class">Rezzza\RulerBundle\Ruler\Inference\InferenceFactory</parameter>
    </parameters>

    <services>
        <service id="rezzza.ruler.inference_container" class="%rezzza.ruler.inference_container.class%" />

        <service id="rezzza.ruler.inference_factory" class="%rezzza.ruler.inference_factory.class%" />
    </services>

</container>
